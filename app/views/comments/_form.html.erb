<%= form_for [post, comment] do |f| %>
<% if comment.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(comment.errors.count, "error") %>.</h4>
      <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(comment.errors[:body]) do %>
    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter comment body" %>
  <% end %>

  <div class="form-group">
    <%= f.submit "Create a comment", class: 'btn btn-success' %>
  </div>
<% end %>
