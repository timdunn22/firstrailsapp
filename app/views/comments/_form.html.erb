<%= form_for [topic, post, post.comments.new] do |f| %>
<% if post.comments.new.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(post.comments.new.errors.count, "error") %>.</h4>
      <ul>
        <% post.comments.new.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(post.comments.new.errors[:body]) do %>
    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter comment body" %>
  <% end %>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
